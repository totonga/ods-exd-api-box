{
    "name": "ODS EXD API Box Dev Container",
    "image": "mcr.microsoft.com/vscode/devcontainers/python:3.12-bookworm",
    "features": {
        "docker-in-docker": {
            "version": "latest",
            "moby": true,
            "dockerDashComposeVersion": "v1"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-python.debugpy",
                "ms-python.black-formatter",
                "charliermarsh.ruff",
                "ms-vscode.makefile-tools",
                "github.copilot",
                "github.copilot-chat",
                "ms-python.isort",
                "ms-python.mypy-type-checker",
                "streetsidesoftware.code-spell-checker"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/usr/local/bin/python",
                "python.linting.enabled": true,
                "python.linting.pylintEnabled": false,
                "python.linting.flake8Enabled": true,
                "python.formatting.provider": "black",
                "[python]": {
                    "editor.defaultFormatter": "ms-python.python",
                    "editor.formatOnSave": true,
                    "editor.codeActionsOnSave": {
                        "source.organizeImports": "explicit"
                    }
                },
                "python.testing.unittestArgs": [
                    "-v",
                    "-s",
                    "./tests",
                    "-p",
                    "test_*.py"
                ],
                "python.testing.unittestEnabled": true
            }
        }
    },
    "postCreateCommand": "pip install --upgrade pip && pip install -e '.[simple,dev]' && pre-commit install --install-hooks && pre-commit install --hook-type commit-msg",
    "remoteUser": "vscode"
}
